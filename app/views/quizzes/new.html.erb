<div class="container">
  <%= form_for [@quiz], url: quizzes_path, html: { multipart: true } do |f| %>
    <%= @quiz.id %>
    <%= @quiz.name %>

    <% @questions.each do |quest| %>

    <div class="col-xl-5 col-lg-5 col-md-5 col-sm-5 col-xs-5">
      <div class="form-group">
        <%= quest.quiz_id %> <%= f.label quest.question_text %>
      </div>
    </div>
    <div class="col-xl-1 col-lg-1 col-md-1 col-sm-1 col-xs-1">
      <div class="line"></div>
    </div>

    <div class="radio col-xl-5 col-lg-5 col-md-5 col-sm-5 col-xs-5">
    <% quest.answers.each do |answer| %>
      <%= f.label answer.answer_text %> f<br>
    <% end %>
    </div>
    <% end %>
  <% end %>
</div>
